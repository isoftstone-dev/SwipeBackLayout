<?xml version="1.0" encoding="utf-8"?>
<DirectionalLayout
    xmlns:ohos="http://schemas.huawei.com/res/ohos"
    ohos:id="$+id:total"
    ohos:height="match_parent"
    ohos:width="match_parent"
    ohos:background_element="yellow"
    ohos:orientation="vertical">
    <com.isoftstone.swipelayout.SwipeLayout
        ohos:id="$+id:sample1"
        ohos:height="80vp"
        ohos:width="match_parent"
        ohos:orientation="horizontal">
        <Text
            ohos:id="$+id:bottom_layout"
            ohos:height="match_parent"
            ohos:width="match_parent"
            ohos:text="要有最樸素的生活和最遙遠的夢想，即使明天天寒地凍，山高水遠，路遠馬亡。"
            ohos:multiple_lines="true"
            ohos:text_size="14fp"
            ohos:background_element="white"
            ohos:padding="10"
            ohos:text_alignment="left"
            ohos:visibility="visible">
        </Text>
        <DirectionalLayout
            ohos:id="$+id:bottom_wrapper"
            ohos:height="match_parent"
            ohos:width="360px"
            ohos:background_element="#ddff00"
            ohos:orientation="horizontal"
            ohos:visibility="visible">
            <Text
                ohos:id="$+id:Text1"
                ohos:height="match_parent"
                ohos:width="180px"
                ohos:background_element="#7B1FA2"
                ohos:text="收藏"
                ohos:text_alignment="center"
                ohos:text_color="#DC143C"
                ohos:left_padding="25"
                ohos:right_padding="25"
                ohos:text_size="14fp"
                ohos:visibility="visible"
                />
            <Text
                ohos:height="match_parent"
                ohos:id="$+id:text2"
                ohos:width="180px"
                ohos:background_element="#C7C7CC"
                ohos:text="删除"
                ohos:text_alignment="center"
                ohos:text_color="#DC143C"
                ohos:text_size="14fp"
                ohos:left_padding="25"
                ohos:right_padding="25"
                ohos:visibility="visible"
                />
        </DirectionalLayout>

        <Image
            ohos:height="match_parent"
            ohos:width="match_parent"
            ohos:background_element="gray"
            ohos:image_src="$media:star"
            ohos:id="$+id:image3"/>

        <DirectionalLayout
            ohos:id="$+id:bottom_front"
            ohos:height="match_parent"
            ohos:width="match_content"
            ohos:background_element="#ddff00"
            ohos:orientation="horizontal"
            ohos:visibility="visible">

            <Image
                ohos:height="match_parent"
                ohos:width="180px"
                ohos:background_element="green"
                ohos:image_src="$media:star"
                ohos:id="$+id:image1"/>

            <Image
                ohos:height="match_parent"
                ohos:width="180px"
                ohos:background_element="red"
                ohos:image_src="$media:trash"
                ohos:id="$+id:image2"/>
        </DirectionalLayout>
    </com.isoftstone.swipelayout.SwipeLayout>

    <Image
        ohos:height="match_content"
        ohos:width="match_content"
        ohos:top_margin="100vp"
        ohos:background_element="green"
        ohos:layout_alignment="horizontal_center"
        ohos:image_src="$media:star"
        ohos:id="$+id:image"/>
</DirectionalLayout>